@using Microsoft.AspNetCore.Http
@{
    var userName = Context.Session.GetString("UserName");
    var rol = Context.Session.GetString("Rol");
    var isLogged = !string.IsNullOrEmpty(userName);

    var ctl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    var act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");
    var esLogin = string.Equals(ctl, "Account", StringComparison.OrdinalIgnoreCase)
               && string.Equals(act, "Login", StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventarioWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventarioWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Productos" asp-action="Index">Inventario</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Ventas">Reporte de ventas</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (!esLogin)
                        {   
                            if (isLogged)
                            {
                                <span class="navbar-text">
                                    Hola, <strong>@userName</strong> (@rol)
                                </span>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="m-0 p-0 d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Cerrar sesión</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - InventarioWebApp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
